#include <iostream>
using namespace std;
#include <iomanip>

int main() 
{
  int a = 1;
  int b = 0;
  double sum = 0, avg = 0;
  while (a > 0)
    {
    cout << "Enter an integer (enter a negative number to end): ";
      cin >> a;
      if(a > 0)
      {
      b++;
      sum += a;
      }
    }
  avg = sum /  (double) b;
  cout << "The sum of the numbers you have entered is: " << sum << endl;
  cout << "The average of " << sum << " using the " << b << " numbers you have entered is " << fixed << setprecision(2) << avg << endl;
  return 0;
}
